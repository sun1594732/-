<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:background="#FFFFFF"
              android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="#ffffff" >

		<ImageView
			android:id="@+id/iv_browse_back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="13dp"
			android:layout_centerVertical="true"
			android:src="@mipmap/back_white" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="浏览成员"
			android:textColor="#000000"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/menu_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/menu_tv"
			android:paddingBottom="10dp"
			android:text="未查看"
			android:textColor="#1ccd9b"
			android:paddingLeft="30dp"
			android:paddingTop="10dp"
			/>

		<ImageView
			android:id="@+id/menu_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="12dp"
			android:paddingBottom="10dp"
			android:paddingLeft="2dp"
			android:paddingTop="10dp"
			android:src="@mipmap/ic_launcher" />
	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="#EEEEEE" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingBottom="8dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="8dp" >

		<EditText
			android:id="@+id/item_header_search"
			android:layout_width="match_parent"
			android:layout_height="36dp"
			android:background="@drawable/item_member_search_shape"
			android:drawableLeft="@mipmap/search_item"
			android:drawablePadding="5dp"
			android:gravity="center_vertical"
			android:hint="搜索"
			android:paddingLeft="15dp"
			android:textColor="#ABABAB"
			android:textSize="10sp" />
	</LinearLayout>

	<ListView
		android:id="@+id/browse_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF" >
	</ListView>

</LinearLayout>